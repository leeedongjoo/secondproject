<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubwayActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/eunjipurple"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_search"
            android:paddingLeft="50dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_map" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_setting"
            android:paddingRight="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="@color/eunjipurple">

        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="검색"
            android:paddingLeft="40dp"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="최근검색"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/txtX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="미정"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="설정"
            android:paddingRight="50dp"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:columnCount="5"
        android:rowCount="2">

        <CheckBox
            android:id="@+id/checkBox0"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:checked="true"
            android:text=" 전체" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:checked="true"
            android:text="1호선" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:checked="true"
            android:text="2호선" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:checked="true"
            android:text="3호선" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:checked="true"
            android:text="4호선" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="5호선" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="6호선" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="7호선" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="8호선" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="9호선" />
    </GridLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_subwayone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lineone" />
        <ImageView
            android:id="@+id/img_subwaytwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linetwo" />
        <ImageView
            android:id="@+id/img_subwaythree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linethree" />
        <ImageView
            android:id="@+id/img_subwayfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linefour" />
        <ImageView
            android:id="@+id/img_subwayfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linefive" />
        <ImageView
            android:id="@+id/img_subwaysix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linesix" />
        <ImageView
            android:id="@+id/img_subwayseven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lineseven" />
        <ImageView
            android:id="@+id/img_subwayeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lineeight" />
        <ImageView
            android:id="@+id/img_subwaynine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linenine" />

        <Button
            android:id="@+id/my_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="10dp"
            android:text="접기/펼치기"
            android:textColor="@color/black" />

    </FrameLayout>
</LinearLayout>
